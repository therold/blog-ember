<form {{action 'save' post on='submit'}}>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title" class="form-control" required="required"}}
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" class="form-control" required="required"}}
  </div>
  <div class="form-group">
    <label for="body">Comment</label>
    {{textarea value=body id="body" class="form-control" rows=4 required="required"}}
  </div>
  <button class="btn btn-warning" {{action 'update' comment}}>Update Comment</button>
  <button class="btn btn-default" {{action 'cancelUpdate'}}>Cancel</button>
  <button class="btn btn-danger pull-right" {{action 'delete' comment}}>Delete Comment</button>
</form>
